<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
</table>



<h2>New book</h2>
<%= form_with model: @book do |b| %>
  <p>Title</p>
  <%= b.text_field :title %>
  
  <p>Body</p>
  <%= b.text_area :body %>
  
  <%= b.submit 'Create Book' %>
  
<% end %>
